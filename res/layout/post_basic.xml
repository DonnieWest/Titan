<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="128dp" android:layout_gravity="right|center_vertical">
        <EditText
                android:layout_width="249dp"
                android:layout_height="63dp"
                android:text="put post here"
                android:id="@+id/post_editText" android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" android:layout_marginTop="28dp"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post"
            android:id="@+id/post_button" android:layout_gravity="right|center_vertical"/>
</LinearLayout>